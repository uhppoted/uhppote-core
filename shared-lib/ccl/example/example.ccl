(open-shared-library (native-translated-namestring (make-pathname :directory (getenv "DYLD_LIBRARY_PATH") 
                                                                  :name "libuhppoted" 
                                                                  :type "so")))


(defun uhppoted-externs () ""
   (list (external "GetDevices")
         (external "GetDevice")))


(define-condition uhppoted-error (error)
   ((message :initarg :message :reader message)))

(defstruct device
           ID 
           address
           subnet
           gateway
           MAC
           version
           date)

(def-foreign-type nil
  (:struct :UDEVICE
           (:id      :int)
           (:address :address)))

(def-foreign-type nil
  (:struct :UDEVICES
           (:N       :int)
           (:devices :address)))

(def-foreign-type nil
  (:struct :UHPPOTE
           (:bind      :address)
           (:broadcast :address)
           (:listen    :address)
           (:timeout   :int)
           (:devices   :address)
           (:debug     :int)))


(def-foreign-type nil
  (:struct :GoDevice
           (:id      :unsigned-long)
           (:address :address)
           (:subnet  :address)
           (:gateway :address)
           (:MAC     :address)
           (:version :address)
           (:date    :address)))


(defun go-string (cstr) "Converts a 'C' char * returned by the Go FFI to a string"
   (cond ((%null-ptr-p cstr) "")
          (T (format nil "~{~A~}" (go-string-char cstr 0)))))


(defun go-string-char (cstr ix) "Accumulates characters from a 'C' char * until it reaches the \0 terminator"
   (let ((ch (%get-unsigned-byte cstr ix)))
        (cond ((eq ch 0) ())
               (T (cons (code-char ch) (go-string-char cstr (+ ix 1)))))))


(defun uhppoted-get-devices (uhppote &optional (N 16)) ""
   (destructuring-bind  (p q) (uhppoted-get-devices-n uhppote N)
      (cond ((>= N p) (subseq q 0 p))
             (T (uhppoted-get-devices uhppote (+ N 16))))))


(defun uhppoted-get-devices-n (uhppote max) ""
   (multiple-value-bind (devices pdevices) (make-heap-ivector max '(unsigned-byte 32))
      (rlet ((N :signed-long max))
         (with-macptrs ((err (external-call "GetDevices" :address uhppote :address N :address pdevices :address)))
            (unless (%null-ptr-p err) (error 'uhppoted-error :message (go-string err))))
         (list (%get-signed-long N) devices))))


(defun uhppoted-get-device (uhppote device-id) ""
   (rlet ((device (:struct :GoDevice)))
         (with-macptrs ((err (external-call "GetDevice" :address uhppote :unsigned-long device-id :address device :address)))
            (unless (%null-ptr-p err) (error 'uhppoted-error :message (go-string err)))
            (make-device :id      (%get-unsigned-long device)
                         :address (%get-cstring (%get-ptr device 8))
                         :subnet  (%get-cstring (%get-ptr device 16))
                         :gateway (%get-cstring (%get-ptr device 24))
                         :MAC     (%get-cstring (%get-ptr device 32))
                         :version (%get-cstring (%get-ptr device 40))
                         :date    (%get-cstring (%get-ptr device 48))))))


(defun uhppoted (f &key (bind-addr "") (broadcast-addr "") (listen-addr "") (timeout 5) (controllers NIL) (debug NIL)) ""
    (with-cstrs ((bind      bind-addr)
                 (broadcast broadcast-addr)
                 (listen    listen-addr))
       (rlet ((p (:struct UDEVICE))
              (devices (:array (:struct UDEVICE) 2))
              (udevices (:struct UDEVICES) :N 2 :devices devices)
              (uhppote (:struct :UHPPOTE) 
                        :bind      bind
                        :broadcast broadcast
                        :listen    listen
                        :timeout   timeout
                        :devices   udevices
                        :debug     (cond (debug 1) (T 0))))
          
          (%setf-macptr p devices)
          (loop for (id addr) in controllers
              do (progn
                    (setf (pref p :udevice.id) id)
                    (setf (pref p :udevice.address) (ccl::make-cstring addr))
                    (%setf-macptr p (%inc-ptr p 16))))

          (restart-case (funcall f uhppote)
             (ignore () nil)
             (use-value  (value) value)
             (with-warning (err) (warn err))))))

(defun get-devices () "" 
   (handler-bind
      ((uhppoted-error
         #'(lambda (c) 
              (format t "*** ERROR: ~a~%" (message c))
              (invoke-restart 'ignore))))
      (list "get-devices" (uhppoted #'(lambda (u) (uhppoted-get-devices u))
                                    :bind-addr      "192.168.1.100"
                                    :broadcast-addr "192.168.1.100"
                                    :listen-addr    "192.168.1.100:60001"
                                    :timeout        1
                                    :controllers    (list '(405419896 "192.168.1.100") '(303986753 "192.168.1.100"))
                                    :debug          T))))

(defun get-device () "" 
   (handler-bind
      ((uhppoted-error
         #'(lambda (c) 
              (format t "*** ERROR: ~a~%" (message c))
              (invoke-restart 'ignore))))
      (list "get-device" (uhppoted #'(lambda (u) (uhppoted-get-device u 405419896))
                                   :bind-addr      "192.168.1.100"
                                   :broadcast-addr "192.168.1.100"
                                   :listen-addr    "192.168.1.100:60001"
                                   :timeout        1
                                   :controllers   (list '(405419896 "192.168.1.100") '(303986753 "192.168.1.100"))
                                   :debug          T))))

(defun debug () "" 
   (handler-bind
      ((uhppoted-error
         #'(lambda (c) 
              (format t "~%   *** ERROR: ~a~%~%" (message c))
              (invoke-restart 'with-warning "oh noes i can has problems"))))
      (list "get-device" (uhppoted #'(lambda (u) (uhppoted-get-device u 405419896))
                                   :controllers (list '(405419896 "192.168.1.101") 
                                                      '(303986753 "192.168.1.102"))))
    )
)
